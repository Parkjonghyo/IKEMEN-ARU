; カンフーマンのエンディングのファイルです。
;
; ストーリーボードdefなので、
; やり方はイントロファイルとまったく一緒です。
;
;------------------------------------
;------------------------------------

[SceneDef]
spr = ending.sff  ;スプライトファイルの登録
startscene = 0    ;最初に始めるシーンナンバーの指定

;------------------------------------
[Scene 0]                       ;シーンナンバー０の定義です
fadein.time      = 60           ;フェードインする時間
fadein.col       = 0,0,0        ;フェードインの色（赤・緑・青の順番　つまりＲＧＢ）
fadeout.time     = 15           ;フェードアウトする時間
fadeout.col      = 255,255,255  ;フェードアウトの色（ＲＧＢ）
clearcolor       = 255,255,255  ;背景色（ＲＧＢ）

;表示するアニメ (レイヤーの登録は１シーン０〜９まで)
layerall.pos     = 160,0        ;全てのレイヤーの画像表示初期位置
layer0.anim      = 0            ;レイヤー０のアニメを呼び出す
layer0.offset    = 0,32         ;レイヤー０の位置
layer0.starttime = 0            ;レイヤー０の開始時間
layer1.anim      = 1            ;レイヤー１のアニメを呼び出す
layer1.offset    = 0,176        ;レイヤー１の位置

bgm              = ending.mp3   ;流すＢＧＭ　MIDIでもMP3でも
bgm.loop         = 0            ;ＢＧＭをループさせるかどうか（0=しない・1=する）
end.time         = 460          ;１シーンの表示総合時間

;------------------------------------
[Scene 1]
fadein.time = 15
fadein.col = 255,255,255
fadeout.time = 15
fadeout.col = 255,255,255
layer0.anim =  10
layer0.offset = 0,32
layer0.starttime = 0
layer1.anim =  11
layer1.offset = 0,176
end.time = 300

;------------------------------------
[Scene 2]
fadein.time = 15
fadein.col = 255,255,255
fadeout.time = 90
fadeout.col = 0,0,0
layer0.anim =  20
layer0.offset = 0,32
layer0.starttime = 0
layer1.anim =  21
layer1.offset = 0,176
end.time = 400

;------------------------------------
;------------------------------------
;各レイヤーで呼び出すためのアニメーションを設定する部分です。
;やり方はairファイルのアニメ設定とまったく一緒です。

[Begin Action 0]
0,0, 0,0, -1

[Begin Action 1]
1,0, 0,0, 200
1,1, 0,0, -1

;------------------------------------
[Begin Action 10]
10,0, 0,0, -1

[Begin Action 11]
11,0, 0,0, -1

;------------------------------------
[Begin Action 20]
20,0, 0,0, -1

[Begin Action 21]
21,0, 0,0, -1

;------------------------------------
;------------------------------------
