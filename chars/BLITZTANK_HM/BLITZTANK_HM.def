;━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

[Info]
name = "BLITZTANK"
displayname = "BLITZTANK"
versiondate = 2009/02/26
mugenversion = 06,14,2003
author = "HM"
pal.defaults = 1

;━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
;	キャラを構成するファイルの定義
;━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

[Files]
Cmd     = BLITZTANK.cmd    		   ;コマンドファイルの登録
StCommon = common1.cns    		  ;コモンステートファイルの登録
Sprite  = BLITZTANK.sff     		  ;複数のＰＣＸ画像をまとめたスプライトファイルの登録
Anim    = BLITZTANK.air     		  ;アニメーションファイルの登録
Sound   = BLITZTANK.snd     		  ;複数のＷＡＶＥ音声をまとめたサウンドファイルの登録
Cns     = cns/BLITZTANK.cns       ;コンスタンツファイルの登録
St      = cns/BLITZTANK.cns       ;ステートファイルの登録・最大１１個まで増やせます
St0	=	cns/BLITZTANK-N.cns
St1	=	cns/BLITZTANK-S.cns
St2	=	cns/BLITZTANK-H.cns
St3	=	cns/BLITZTANK-KS.cns

St7	=	cns/BLITZTANK-Helper.cns
St8	=	cns/BLITZTANK-2.cns
St9	=	cns/BLITZTANK-3.cns

;━━━━━━━━━━━━━━━━━━カラーパレットファイル

Pal1 = act/color1.act  ;Ａボタンで決定した色が使えます
Pal2 = act/color2.act           ;Ｂ
Pal3 = act/color3.act           ;Ｃ
Pal4 = act/color4.act           ;Ｘ
Pal5 = act/color5.act           ;Ｙ
Pal6 = act/color6.act           ;Ｚ

Pal7 = act/color7.act           ;Ｓ押しながらＡボタンで決定した色が使えます
Pal8 = act/color8.act           ;Ｓ押しながらＢ
Pal9 = act/color9.act          ;Ｓ押しながらＣ
Pal10= act/color10.act          ;Ｓ押しながらＸ
Pal11= act/color_BLACK.act          ;Ｓ押しながらＹ
Pal12= act/color_GOLD.act          ;Ｓ押しながらＺ

